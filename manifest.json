{
  "manifest_version": 2,
  "name": "ChatGPT Convo Saver",
  "version": "1.0",
  "description": "Saves ChatGPT current conversation to a text file.",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
